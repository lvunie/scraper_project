var scraperjs = require('scraperjs'),
    router = new scraperjs.Router();

router
    .otherwise(function(url) {
    console.log("Url '"+url+"' couldn't be routed.");
});

var path = {};

router.on('https?://(www.)?web-presence-in-china/watch/:id')
    .createStatic()
    .scrape(function($) {
        return $("p").map(function() {
            return $(this).text();
        }).get();
    }, function(news) {
        console.log(news);
    })

router.route("http://www.web-presence-in-china.com/", function() {
    console.log("i'm done");
});

//https://www.youtube.com/watch/YE7VzlLtp-4
//https?://(www.)?youtube.com/watch/:id
